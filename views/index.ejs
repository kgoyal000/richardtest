<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/style.css">
    <title>Richard Test</title>
  </head>
  <body onclick="checkNav(event)">
    <div id="sidebar" class="sidebar">
      <!-- <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">Ã—</a> -->
      <a href="#" onclick="openNav()" id="opt">Option</a>
      <div class="quantity" id="quantity">
        <h4 id="h4_title">Quantity</h4>
        <input type="number" max="3" min="0" id="quan_num" oninput="submit()">
      </div>
    </div>
    <div id="mySidebar" class="sidebar center start">
        <select name="select" id="select" onchange="submit()">
          <option selected disabled value="">Dropdown</option>
          <option value="A">A</option>
          <option value="B">B</option>
        </select>
        <input name="page" type="hidden" id="page" value="1">
    </div>
    <div id="main" onclick="closeNav()">
      <div id="data">
        <% for(var x=0;x<data.length;x++){ %> 
          <div class="card">
            <div class="container">
              <h4><b><%= data[x] %></b></h4>
            </div>
          </div>
          <% } %>
      </div>
 
      <div class="page">
        <i class="arrow left fade" onclick="decrease();submit()"></i><span id="page_num">1</span><i class="arrow right" onclick="increase();submit()"></i>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script src="js/index.js"></script>
  </body>
</html>